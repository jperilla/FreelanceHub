@model IEnumerable<Web.Models.SearchResult>

<section id="search_results">
@if (Model.Count() > 0)
{
    using (@Ajax.BeginForm("BingSearchNext", "Search", new AjaxOptions { HttpMethod = "Post", UpdateTargetId="message" }))
    {
        <input type="submit" class="right" value="Next" /> 
        <p id="message"></p>
    <table class="minimalist" cellpadding="0" cellspacing="0">
        <thead>
		    <tr>
			    <td>
				    <h3>Title</h3>
			    </td>
			    <td>
                    <h3>Site</h3>
			    </td>
			    <td>
			    </td>
			    <td>
				    <h3>Description</h3>
			    </td>
			    <td>
			    </td>
                <td>
			    </td>
		    </tr>
	    </thead>
        <tbody>
   

        @foreach (var item in Model)
        {        
            <tr>
                <td>
                    <b><a href="@item.Url" target="_blank">@Html.Raw(@item.Title)</a></b>
                </td>
                <td>
                    <a href="@item.DisplaySite" target="_blank">@Html.Raw(@item.DisplaySite)</a>

                </td>
                <td>
                    @Html.ActionLink("Apply", "Redirect", "Search", new { url = @item.Url }, new { @class="red" })
                </td>
            
                <td>
                    @Html.Raw(@item.Description)
                </td>
                <td>
                    @Ajax.ActionLink("Save Job", "SaveBingJob", "Jobs", Model, new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "message", InsertionMode = InsertionMode.Replace })
                </td>
            </tr>
        }

        </tbody>

    </table>
    
    }
}
</section>

